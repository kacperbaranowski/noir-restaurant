<section id="rezerwacja" class="reservation py-48 lg:py-60 px-8 lg:px-16 relative overflow-hidden">
  <!-- Background -->
  <div
    class="reservation-bg absolute inset-0 w-full h-full bg-cover bg-center"
    style="background-image: url('https://images.unsplash.com/photo-1559339352-11d035aa65de?w=1920&q=80'); filter: brightness(0.2);"
  ></div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto text-center">
    <p class="reveal font-[family-name:var(--font-body)] text-xs font-light tracking-[0.5em] uppercase text-[var(--color-accent)] mb-6">
      Rezerwacja
    </p>

    <h2 class="reveal font-[family-name:var(--font-display)] text-[clamp(2.5rem,8vw,5rem)] font-light mb-8 leading-tight">
      Zarezerwuj <em class="italic text-[var(--color-accent)]">niezapomniane</em> doświadczenie
    </h2>

    <p class="reveal font-[family-name:var(--font-body)] text-base lg:text-lg font-extralight text-[var(--color-text-muted)] leading-relaxed mb-12 max-w-2xl mx-auto">
      Pozwól nam stworzyć dla Ciebie wyjątkowy wieczór. Wybierz kolację à la carte,
      menu degustacyjne lub ekskluzywny Chef's Table.
    </p>

    <!-- Features -->
    <div class="reveal grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <div class="text-center">
        <span class="font-[family-name:var(--font-display)] text-4xl lg:text-5xl font-light text-[var(--color-accent)]">2</span>
        <p class="font-[family-name:var(--font-body)] text-xs tracking-[0.2em] uppercase text-[var(--color-text-muted)] mt-2">Gwiazdki Michelin</p>
      </div>
      <div class="text-center">
        <span class="font-[family-name:var(--font-display)] text-4xl lg:text-5xl font-light text-[var(--color-accent)]">7</span>
        <p class="font-[family-name:var(--font-body)] text-xs tracking-[0.2em] uppercase text-[var(--color-text-muted)] mt-2">Dań degustacyjnych</p>
      </div>
      <div class="text-center">
        <span class="font-[family-name:var(--font-display)] text-4xl lg:text-5xl font-light text-[var(--color-accent)]">50+</span>
        <p class="font-[family-name:var(--font-body)] text-xs tracking-[0.2em] uppercase text-[var(--color-text-muted)] mt-2">Pozycji w karcie win</p>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="reveal flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href="/rezerwacja"
        class="magnetic inline-block font-[family-name:var(--font-body)] text-sm font-normal tracking-[0.2em] uppercase text-[var(--color-bg)] bg-[var(--color-accent)] px-12 py-5 no-underline transition-all duration-400 hover:bg-[var(--color-text)]"
      >
        Zarezerwuj Online
      </a>
      <a
        href="tel:+48123456789"
        class="magnetic inline-block font-[family-name:var(--font-body)] text-sm font-light tracking-[0.2em] uppercase text-[var(--color-text)] border border-white/20 px-12 py-5 no-underline transition-all duration-400 hover:border-[var(--color-accent)] hover:text-[var(--color-accent)]"
      >
        +48 123 456 789
      </a>
    </div>

    <!-- Hours -->
    <p class="reveal font-[family-name:var(--font-body)] text-xs text-[var(--color-text-muted)] mt-12">
      Wt-Czw: 18:00-23:00 · Pt-Sob: 18:00-00:00 · Nd: 17:00-22:00
    </p>
  </div>
</section>
