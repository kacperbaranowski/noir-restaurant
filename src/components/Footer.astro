---
const navigation = [
  { href: '/o-nas', label: 'O nas' },
  { href: '/menu', label: 'Menu' },
  { href: '/rezerwacja', label: 'Rezerwacja' },
  { href: '/kontakt', label: 'Kontakt' },
];

const contact = [
  { href: 'tel:+48123456789', label: '+48 123 456 789' },
  { href: 'mailto:rezerwacje@noir.pl', label: 'rezerwacje@noir.pl' },
  { href: '#', label: 'ul. Elegancka 42' },
  { href: '#', label: '00-001 Warszawa' },
];

const hours = [
  'Wt-Czw: 18:00 - 23:00',
  'Pt-Sob: 18:00 - 00:00',
  'Niedziela: 17:00 - 22:00',
  'Poniedziałek: Zamknięte',
];

const social = ['Instagram', 'Facebook', 'TripAdvisor'];
---

<footer id="kontakt" class="py-24 px-8 lg:px-16 border-t border-white/10">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16 max-w-7xl mx-auto">
    <!-- Brand -->
    <div>
      <h3 class="font-[family-name:var(--font-display)] text-3xl font-normal tracking-[0.2em] mb-6">
        NOIR
      </h3>
      <p class="font-[family-name:var(--font-body)] text-sm font-extralight text-[var(--color-text-muted)] leading-relaxed max-w-xs">
        Gdzie sztuka kulinarna spotyka się z elegancją. Zapraszamy do świata wyjątkowych smaków i niezapomnianych doświadczeń.
      </p>
    </div>

    <!-- Navigation -->
    <div>
      <h4 class="font-[family-name:var(--font-body)] text-xs font-normal tracking-[0.3em] uppercase text-[var(--color-accent)] mb-8">
        Nawigacja
      </h4>
      <ul class="list-none space-y-4">
        {navigation.map((link) => (
          <li>
            <a
              href={link.href}
              class="font-[family-name:var(--font-body)] text-sm font-extralight text-[var(--color-text-muted)] no-underline transition-colors duration-300 hover:text-[var(--color-text)]"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Contact -->
    <div>
      <h4 class="font-[family-name:var(--font-body)] text-xs font-normal tracking-[0.3em] uppercase text-[var(--color-accent)] mb-8">
        Kontakt
      </h4>
      <ul class="list-none space-y-4">
        {contact.map((item) => (
          <li>
            <a
              href={item.href}
              class="font-[family-name:var(--font-body)] text-sm font-extralight text-[var(--color-text-muted)] no-underline transition-colors duration-300 hover:text-[var(--color-text)]"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Hours -->
    <div>
      <h4 class="font-[family-name:var(--font-body)] text-xs font-normal tracking-[0.3em] uppercase text-[var(--color-accent)] mb-8">
        Godziny
      </h4>
      <ul class="list-none space-y-4">
        {hours.map((hour) => (
          <li class="font-[family-name:var(--font-body)] text-sm font-extralight text-[var(--color-text-muted)]">
            {hour}
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Bottom -->
  <div class="mt-24 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-8 max-w-7xl mx-auto">
    <p class="font-[family-name:var(--font-body)] text-xs text-[var(--color-text-muted)] tracking-wide">
      © 2025 NOIR Restaurant. Wszelkie prawa zastrzeżone.
    </p>

    <div class="flex gap-8">
      {social.map((item) => (
        <a
          href="#"
          class="magnetic font-[family-name:var(--font-body)] text-xs text-[var(--color-text-muted)] no-underline tracking-wide uppercase transition-colors duration-300 hover:text-[var(--color-accent)]"
        >
          {item}
        </a>
      ))}
    </div>
  </div>

  <!-- Credit -->
  <div class="mt-8 text-center max-w-7xl mx-auto">
    <p class="font-[family-name:var(--font-body)] text-[10px] text-[var(--color-text-muted)]/50 tracking-[0.15em] uppercase">
      Demo site by
      <a
        href="https://kacperbaranowski.dev"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors duration-300 no-underline"
      >
        kacperbaranowski.dev
      </a>
    </p>
  </div>
</footer>
